<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="janki-manager" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- <jta-data-source>java:/DefaultDS</jta-data-source> -->

		<!-- JAnki JPA entities
		<class>com.rogueai.janki.core.persistence.entity.Card</class>
		<class>com.rogueai.janki.core.persistence.entity.Collection</class>
		<class>com.rogueai.janki.core.persistence.entity.Grave</class>
		<class>com.rogueai.janki.core.persistence.entity.GraveId</class>
		<class>com.rogueai.janki.core.persistence.entity.Note</class>
		<class>com.rogueai.janki.core.persistence.entity.Revlog</class>
 -->
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

		<properties>
			<property name="hibernate.dialect" value="com.rogueai.janki.core.persistence.dialect.SQLiteDialect" />
			<property name="hibernate.ejb.resource_scanner" value="com.rogueai.janki.core.persistence.jpa.scanner.OsgiResourceScanner"/>
						
			<property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC" />
			<property name="javax.persistence.jdbc.url" value="jdbc:sqlite:collection.anki2" />
		</properties>
	</persistence-unit>
</persistence>